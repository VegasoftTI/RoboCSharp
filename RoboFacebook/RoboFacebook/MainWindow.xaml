<Window x:Class="RoboFacebook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Robô de envio de mensagem" Height="350" Width="525">
    <Grid>
        <Label Content="Digite seu email:&#xD;&#xA;" HorizontalAlignment="Left" Margin="66,70,0,0" VerticalAlignment="Top" Width="107" Height="34"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="23" Margin="184,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="179"/>
        <Label Content="Digite sua senha:" HorizontalAlignment="Left" Margin="66,109,0,0" VerticalAlignment="Top" Width="118" Height="30"/>
        <Label Content="Digite a mensagem:" HorizontalAlignment="Left" Margin="66,152,0,0" VerticalAlignment="Top" Width="118" Height="30"/>
        <TextBox x:Name="txtMensagem" HorizontalAlignment="Left" Height="60" Margin="184,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="179"/>
        <Button x:Name="btnEnviarMensagem" Content="Enviar Mensagem" HorizontalAlignment="Left" Margin="72,238,0,0" VerticalAlignment="Top" Width="101" Click="btnEnviarMensagem_Click"/>
        <PasswordBox x:Name="txtSenha" HorizontalAlignment="Left" Margin="184,109,0,0" VerticalAlignment="Top" Width="179" Height="23"/>

    </Grid>
</Window>
